{
    "editor.find.autoFindInSelection": "always",
    "editor.fontSize": 15,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "trailing",
    "editor.tabSize": 2,
    "[rust]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "[typescript][typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "vetur.validation.template": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.statusBar.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.codeLens.enabled": false,
    "markdown.preview.fontSize": 15,
    "ruby.intellisense": "rubyLocate",
    "ruby.lint": {
        "ruby": true
    },
    "ruby.useBundler": true,
    "ruby.useLanguageServer": true,
    "vim.easymotion": true,
    "vim.handleKeys": {
        "<C-f>": false,
        "<C-j>": false,
        "<C-k>": false
    },
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "editor.bracketPairColorization.enabled": true,
    "workbench.colorTheme": "Solarized Dark",
    "workbench.colorCustomizations": {
        "[Solarized Dark]": {
            "editor.foreground": "#839496",
            "editorCursor.foreground": "#839496",
            "editorBracketHighlight.foreground1": "#839496",
            "editorBracketHighlight.foreground2": "#b58900",
            "editorBracketHighlight.foreground3": "#268BD2",
            "editorBracketHighlight.foreground4": "#d33682",
            "terminal.foreground": "#839496"
        }
    },
    "editor.tokenColorCustomizations": {
        "[Solarized Dark]": {
            "keywords": "#D33682"
        }
    },
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.focusRecentEditorAfterClose": false,
    "rust-analyzer.inlayHints.parameterHints": false,
    "rust-analyzer.inlayHints.typeHints": false,
    "rust-analyzer.inlayHints.chainingHints": false,
    "rust-analyzer.checkOnSave.command": "clippy",
    "editor.formatOnSaveMode": "modifications",
    "workbench.iconTheme": "vscode-icons",
    "liveshare.authenticationProvider": "GitHub",
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.fontSize": 14,
    "diffEditor.ignoreTrimWhitespace": false,
    // https://github.com/microsoft/vscode/issues/143061#issuecomment-1042785423
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "/bin/zsh",
            "args": [
                "-l", "-i"
            ]
        }
    },
}
